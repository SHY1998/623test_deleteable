<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:id="@+id/OP_BG"
android:background="@drawable/default_album">
    <TextView
        android:gravity="center"
        android:text="青花瓷"
        android:id="@+id/Online_TV_songName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="周杰伦"
        android:gravity="center"
        android:id="@+id/Online_TV_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:background="@drawable/default_album"
        android:id="@+id/Online_IV_picture"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SeekBar
            android:id="@+id/Online_SB_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="左"
                android:id="@+id/Online_current_progress"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Online_final_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
                android:layout_weight="1"
            android:background="@drawable/ic_last"
            android:id="@+id/Online_IB_front"
            android:layout_gravity="left"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageButton
                android:layout_weight="1"
            android:id="@+id/Online_IB_pause"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_pause" />

        <ImageButton
                android:layout_weight="1"
            android:id="@+id/Online_IB_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_next" />
    </LinearLayout>
</LinearLayout>
